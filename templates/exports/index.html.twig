{% extends 'base.html.twig' %}

{% block title %}Exports index{% endblock %}

{% block body %}
    <h1>Exports index</h1>
<div class='row'>

    <div class='col-md-4'>
        {{ form(filter) }}
    </div>
    <div class="col-md-8">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th data-field="name" data-width="50">Nazwa</th>
                    <th data-field="date" data-width="50">Data</th>
                    <th data-field="time" data-width="50">Godzina</th>
                    <th data-field="author" data-width="50">UÅ¼ytkownik</th>
                    <th data-field="local" data-width="50">Lokal</th>
                </tr>
            </thead>
            <tbody>
            {% for export in pager %}
                <tr>
                    <td>{{ export.name }}</td>
                    <td>{{ export.exportAt ? export.exportAt|date('Y-m-d') : '' }}</td>
                    <td>{{ export.exportAt ? export.exportAt|date('H:i:s') : '' }}</td>
                    <td>{{ export.author.name }}</td>
                    <td>{{ export.local.name }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
            {{ pagerfanta(pager) }}
            {% for mix in pager %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
